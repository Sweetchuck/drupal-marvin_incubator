<?xml version="1.0" encoding="UTF-8"?>
<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="vendor/phpunit/phpunit/phpunit.xsd" bootstrap="drupal_root/core/tests/bootstrap.php" colors="true" beStrictAboutOutputDuringTests="true" beStrictAboutChangesToGlobalState="true">
  <php>
    <ini name="error_reporting" value="32767"/>
    <ini name="memory_limit" value="-1"/>
    <env name="SIMPLETEST_BASE_URL" value="http://example.com:8080"/>
    <env name="SIMPLETEST_DB" value="sqlite://../sites/foo/default__default.sqlite"/>
    <env name="SYMFONY_DEPRECATIONS_HELPER" value="weak_vendor"/>
    <env name="MINK_DRIVER_CLASS" value="\Drupal\FunctionalJavascriptTests\DrupalSelenium2Driver"/>
    <env name="MINK_DRIVER_ARGS" value="[&quot;chrome&quot;,null,&quot;http://localhost:4444/wd/hub&quot;]"/>
    <env name="MINK_DRIVER_ARGS_WEBDRIVER" value="[&quot;chromium&quot;,{&quot;browserName&quot;:&quot;chrome&quot;,&quot;chromeOptions&quot;:{&quot;args&quot;:[&quot;--disable-gpu&quot;,&quot;--headless&quot;]}},&quot;http://localhost:9222&quot;]"/>
  </php>
  <testsuites>
    <testsuite name="unit">
      <file>drupal_root/core/tests/TestSuites/UnitTestSuite.php</file>
    </testsuite>
    <testsuite name="kernel">
      <file>drupal_root/core/tests/TestSuites/KernelTestSuite.php</file>
    </testsuite>
    <testsuite name="functional">
      <file>drupal_root/core/tests/TestSuites/FunctionalTestSuite.php</file>
    </testsuite>
    <testsuite name="functional-javascript">
      <file>drupal_root/core/tests/TestSuites/FunctionalJavascriptTestSuite.php</file>
    </testsuite>
  </testsuites>
  <listeners>
    <listener class="\Drupal\Tests\Listeners\DrupalListener"/>
    <listener class="\Symfony\Bridge\PhpUnit\SymfonyTestsListener"/>
  </listeners>
  <logging>
    <log type="coverage-text" target="php://stdout"/>
    <log type="coverage-html" target="reports/human/coverage/html"/>
    <log type="coverage-clover" target="reports/machine/coverage.xml"/>
    <log type="testdox-html" target="reports/human/unit/junit.html"/>
    <log type="junit" target="reports/machine/unit/junit.xml"/>
  </logging>
  <filter>
    <whitelist processUncoveredFilesFromWhitelist="true">
      <directory>a/b/Commands</directory>
      <directory>a/b/src</directory>
    </whitelist>
  </filter>
</phpunit>
