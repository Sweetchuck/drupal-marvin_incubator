{
    "name": "drupal/marvin_incubator",
    "description": "Drush commands to manage contrib development",
    "type": "drupal-drush",
    "license": "GPL-2.0-or-later",
    "prefer-stable": true,
    "minimum-stability": "dev",
    "config": {
        "preferred-install": "dist",
        "bin-dir": "bin",
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "conflict": {
        "drupal/marvin_product": "*"
    },
    "repositories": {
        "drupal/dummy_m1": {
            "type": "path",
            "url": "tests/fixtures/extensions/dummy_m1"
        },
        "drupal/dummy_m2": {
            "type": "path",
            "url": "tests/fixtures/extensions/dummy_m2"
        },
        "drupal/marvin": {
            "type": "path",
            "url": "../../drupal/marvin"
        },
        "sweetchuck/git-hooks-stdinput-reader": {
            "type": "path",
            "url": "../../sweetchuck/git-hooks-stdinput-reader"
        },
        "sweetchuck/lint-report": {
            "type": "path",
            "url": "../../sweetchuck/lint-report"
        },
        "sweetchuck/robo-cdd": {
            "type": "path",
            "url": "../../sweetchuck/robo-cdd"
        },
        "sweetchuck/robo-composer": {
            "type": "path",
            "url": "../../sweetchuck/robo-composer"
        },
        "sweetchuck/robo-drush": {
            "type": "path",
            "url": "../../sweetchuck/robo-drush"
        },
        "sweetchuck/robo-git": {
            "type": "path",
            "url": "../../sweetchuck/robo-git"
        },
        "sweetchuck/robo-nvm": {
            "type": "path",
            "url": "../../sweetchuck/robo-nvm"
        },
        "sweetchuck/robo-php-lint": {
            "type": "path",
            "url": "../../sweetchuck/robo-php-lint"
        },
        "sweetchuck/robo-phpcs": {
            "type": "path",
            "url": "../../sweetchuck/robo-phpcs"
        },
        "sweetchuck/robo-phpmd": {
            "type": "path",
            "url": "../../sweetchuck/robo-phpmd"
        },
        "sweetchuck/robo-phpunit": {
            "type": "path",
            "url": "../../sweetchuck/robo-phpunit"
        },
        "sweetchuck/robo-tslint": {
            "type": "path",
            "url": "../../sweetchuck/robo-tslint"
        },
        "sweetchuck/robo-stringy": {
            "type": "path",
            "url": "../../sweetchuck/robo-stringy"
        },
        "sweetchuck/robo-yarn": {
            "type": "path",
            "url": "../../sweetchuck/robo-yarn"
        },
        "sweetchuck/utils": {
            "type": "path",
            "url": "../../sweetchuck/utils"
        }
    },
    "require": {
        "ext-dom": "*",
        "ext-json": "*",
        "drupal/marvin": "dev-8.x-1.x",
        "sweetchuck/robo-php-lint": "^0.0",
        "sweetchuck/robo-stringy": "^0.0"
    },
    "require-dev": {
        "composer/installers": "^1.5",
        "drupal-composer/drupal-scaffold": "^2.5",
        "drupal/coder": "^8.2",
        "drupal/core": "^8.6",
        "drupal/dummy_m1": "dev-8.x-1.x",
        "drupal/dummy_m2": "dev-8.x-1.x",
        "drush/drush": "^9.6",
        "mikey179/vfsstream": "^1.6",
        "phpunit/phpunit": "^6.3",
        "sweetchuck/git-hooks": "^0.0",
        "weitzman/drupal-test-traits": "^1.1"
    },
    "suggest": {
        "drush/drush": "^9.6"
    },
    "autoload": {
        "psr-4": {
            "Drush\\Commands\\marvin_incubator\\": "Commands/marvin_incubator/",
            "Drupal\\marvin_incubator\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
          "Drupal\\Dev\\marvin_incubator\\Composer\\": "src-dev/Composer/",

          "Drupal\\Tests\\marvin_incubator\\Helper\\": "tests/src/Helper/",
          "Drupal\\Tests\\marvin_incubator\\Unit\\": "tests/src/Unit/",
          "Drupal\\Tests\\marvin_incubator\\Integration\\": "tests/src/Integration/",

          "Drupal\\Tests\\": "tests/fixtures/project_01/docroot/core/tests/Drupal/Tests/",
          "Drupal\\KernelTests\\": "tests/fixtures/project_01/docroot/core/tests/Drupal/KernelTests"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-8.x-1.x": "1.x.x-dev"
        },
        "drush": {
            "services": {
                "drush.services.yml": "^9"
            }
        },
        "enable-patching": true,
        "composer-exit-on-patch-failure": true,
        "patches": {},
        "drupal-scaffold": {
            "excludes": [
                ".csslintrc",
                ".editorconfig",
                ".eslintignore",
                ".eslintrc.json",
                ".gitattributes",
                ".htaccess",
                "web.config"
            ]
        },
        "installer-paths": {
            "tests/fixtures/project_01/docroot/core": ["type:drupal-core"],
            "tests/fixtures/project_01/docroot/libraries/{$name}": ["type:drupal-library"],
            "tests/fixtures/project_01/docroot/modules/contrib/{$name}": ["type:drupal-module"],
            "tests/fixtures/project_01/docroot/profiles/contrib/{$name}": ["type:drupal-profile"],
            "tests/fixtures/project_01/docroot/themes/contrib/{$name}": ["type:drupal-theme"],
            "tests/fixtures/project_01/drush/contrib/{$name}": ["type:drupal-drush"]
        },
        "marvin": {
            "integration": {
                "filesToSymlink": {
                    "gitHooks": true
                }
            }
        }
    },
    "scripts": {
        "post-install-cmd": [
            "\\Drupal\\Dev\\marvin_incubator\\Composer\\Scripts::postInstallCmd"
        ],
        "post-update-cmd": [
            "\\Drupal\\Dev\\marvin_incubator\\Composer\\Scripts::postUpdateCmd"
        ],
        "clean": [
            "rm -rf bin/ reports/ vendor/",
            "git clean --force -d -x -- tests/",
            "git clean --force -d -X -- tests/"
        ],
        "test": [
            "rm -rf ./reports/",
            "@test:unit",
            "@test:integration"
        ],
        "test:unit": [
            "mkdir -p reports/machine/coverage-php/",
            "phpunit --testsuite Unit --coverage-html reports/human/coverage/Unit/html --testdox-html reports/human/testdox/Unit.html --coverage-clover reports/machine/coverage-clover/Unit.xml --coverage-php reports/machine/coverage-php/Unit.php --log-junit reports/machine/junit/Unit.xml"
        ],
        "test:integration": [
            "mkdir -p reports/machine/coverage-php/",
            "phpunit --testsuite Integration --coverage-html reports/human/coverage/Integration/html --testdox-html reports/human/testdox/Integration.html --coverage-clover reports/machine/coverage-clover/Integration.xml --coverage-php reports/machine/coverage-php/Integration.php --log-junit reports/machine/junit/Integration.xml"
        ],
        "generate:coverage-html": [
            "\\Drupal\\Dev\\marvin_incubator\\Composer\\Scripts::generateCoverageHtml"
        ]
    }
}
